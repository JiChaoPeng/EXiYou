<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>

    </style>

    <style name="title_text_appearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Toolbar">
        <item name="actionMenuTextColor">@color/color_white</item> <!--  敲定颜色-->
        <item name="android:textSize">15sp</item> <!--  搞掂字体大小-->

    </style>
<style name="firstInBackGroung" >
    <item name="android:windowBackground" >@mipmap/exiyou_bg</item>
</style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/exiyou_bg" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_splash_ready_go"
        app:layout_marginTopPercent="10%"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="30%" />

    <ImageView
        android:layout_gravity="bottom|right|center_horizontal"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/exiyou_text_logo1"
        app:layout_heightPercent="55%"
        app:layout_widthPercent="32%" />


</android.support.percent.PercentFrameLayout>
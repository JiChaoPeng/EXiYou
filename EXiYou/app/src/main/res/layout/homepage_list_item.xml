<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_height="match_parent"
    android:elevation="10dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homepage_list_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/homepage_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/homepage_list_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorGary_6"
                android:textSize="14sp" />

            <ImageView

                android:id="@+id/homepage_list_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/homepage_indecitor" />
        </LinearLayout>

        <TextView
            android:id="@+id/homepage_list_type"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_green_tab_alph"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            app:layout_anchor="@id/homepage_list_image" />

        <ImageView
            android:id="@+id/homepage_list_author_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_anchor="@id/homepage_list_image"
            app:layout_anchorGravity="bottom|center_horizontal" />

        <TextView
            android:id="@+id/homepage_list_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_anchor="@id/homepage_list_title"
            android:layout_marginRight="5dp"
            app:layout_anchorGravity="top|center_horizontal" />

    </android.support.design.widget.CoordinatorLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommend_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/recommend_item_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_qyer_gray_60" />

        <TextView
            android:id="@+id/recommend_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/recommend_item_avatar"
            android:text="author"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/recommend_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/recommend_item_author"
            android:layout_below="@id/recommend_item_author"
            android:layout_marginTop="10dp"
            android:text="title"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/recommend_item_big_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/recommend_item_author"
            android:layout_below="@id/recommend_item_title"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommend_item_big_pic_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_height="95dp" />
            <ImageView
                android:id="@+id/recommend_item_big_pic_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_height="95dp" />
            <ImageView
                android:id="@+id/recommend_item_big_pic_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="95dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/recommend_item_title"
            android:layout_below="@id/recommend_item_big_pic"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/recommend_item_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="forum"
                android:textColor="@color/color_green_tab"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/recommend_item_reply_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/recommend_item_reply_num"
                android:src="@mipmap/ic_bbs_article_reply" />

            <TextView
                android:id="@+id/recommend_item_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:layout_toLeftOf="@id/recommend_item_reply_num"
                android:text="20分钟前"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/recommend_item_reply_time"
                android:src="@mipmap/ic_hot_article_time" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>